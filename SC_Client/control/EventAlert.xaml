<UserControl x:Class="SC_Client.control.EventAlert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SC_Client.control"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Border Background="{StaticResource MaterialDesignBody}" CornerRadius="15, 15, 15, 15" Margin="5">
                <TextBlock Name="MessageText" Margin="10" TextWrapping="Wrap" Text="Hello world" Foreground="White" FontSize="9"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
