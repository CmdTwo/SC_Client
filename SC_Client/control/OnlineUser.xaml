<UserControl x:Class="SC_Client.control.OnlineUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SC_Client.control"
             mc:Ignorable="d" 
             d:DesignWidth="200">
    <Grid>
        <Border BorderThickness="0" CornerRadius="0" Margin="0,2">
            <StackPanel Orientation="Horizontal" Margin="5, 1">
                <Ellipse Name="Mark" Fill="{StaticResource PrimaryHueLightBrush}" VerticalAlignment="Center" Height="10" Width="10" Margin="0, 0, 5, 0"/>
                <TextBlock TextWrapping="NoWrap" VerticalAlignment="Center" Name="Username" Text="Who" Foreground="{StaticResource PrimaryHueLightBrush}" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
