<UserControl x:Class="SC_Client.control.PMReceived"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SC_Client.control"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontStyle="Italic" Name="From" Margin="10, 5, 0, 0" Text="Who" Foreground="{StaticResource PrimaryHueLightBrush}" VerticalAlignment="Top" FontSize="10" HorizontalAlignment="Left"/>
            <Border Name="BG" Background="{StaticResource PrimaryHueLightBrush}" CornerRadius="15, 15, 15, 0" Margin="5">
                <TextBlock FontStyle="Italic" Name="MessageText" Margin="10" TextWrapping="Wrap" Text="Hello world" Foreground="White"/>
            </Border>
            
        </StackPanel>
    </Grid>
</UserControl>
