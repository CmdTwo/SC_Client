<Window x:Class="SC_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ConnectButton" Content="Connect"  Padding="20, 5" Click="ConnectButton_Click"/>
            <Button Name="SendTestDataButton" Content="Test data"  Padding="20, 5" Click="TestDataButton_Click" IsEnabled="False" Margin="0,10"/>
            <Button Name="DisconnectButton" Content="Disconnect" Padding="20, 5" Click="DisconnectButton_Click" IsEnabled="False"/>
        </StackPanel>
        <TextBox Name="DebugTextBox" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="230"/>

    </Grid>
</Window>
