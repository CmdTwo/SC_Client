<Window x:Class="SC_Client.view.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC_Client.view"
        mc:Ignorable="d"
        Title="Alert"
        Width="400"
        Height="150"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="ContentTextBox" Text="Some text" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="30"/>
        <Button Content="OK" Width="100" VerticalAlignment="Bottom" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
