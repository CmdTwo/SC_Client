<Window x:Class="SC_Client.view.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC_Client.view"
        mc:Ignorable="d"
        Title="Alert"
        Width="350"
        Height="200"
        ResizeMode="NoResize"
        Name="AlertWin">
    <StackPanel>
        <TextBlock FontSize="14" Name="ContentTextBox" Text="Some text" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="30, 30, 30, 0"/>
        <Button Content="OK" Width="100" VerticalAlignment="Bottom" Margin="20" Click="Button_Click"/>
    </StackPanel>
</Window>
